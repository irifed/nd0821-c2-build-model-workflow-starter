name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input artifact name (csv file with dataset)
        type: string

      output_artifact:
        description: Output artifact name (csv file with dataset after basic cleaning)
        type: string

      output_type:
        description: Type of the output artifact (cleaned data)
        type: string

      output_description:
        description: Description of the output artifact
        type: string

      min_price:
        description: Parameter for removing price outliers: min price
        type: string

      max_price:
        description: Parameter for removing price outliers: min price
        type: string


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
